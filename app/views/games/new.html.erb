

<div class="container">
  <h1>New Game</h1>
  <form action="/score" method="post">
  <!--   <% @grid.join(", ") %> -->

    <div class="grid">
      <% @grid.each do |letter| %>
      <li class="letter inline"><%= letter %></li>
      <% end %>
    </div>
    <p>What is the longest word you can find?</p>


    <input type="text" name="word" class="input" placeholder="Type in your word">
    <input type="submit" class="button" value="Play">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :grid, @grid  %>
  </form>
</div>
